{% extends 'base.html.twig' %}

{% block body %}
    <h1>Boxes list</h1>
    {% if boxes|length > 0 %}
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>State</th>
                <th>Budget</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for box in boxes %}
            <tr>
                <td><a href="{{ path('box_show', { 'id': box.id }) }}">{{ box.id }}</a></td>
                <td>{{ box.name }}</td>
                <td>{{ box.state }}</td>
                <td>{{ box.budget }}</td>
                <td>
                    <!-- Split button -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger">Action</button>
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('box_show', { 'id': box.id }) }}">{{ 'btn.show' | trans }}</a></li>
                            <li> <a href="{{ path('box_edit', { 'id': box.id }) }}">{{ 'btn.edit' | trans }}</a></li>
                        </ul>
                    </div>
                    <ul>
                        <li>

                        </li>
                        <li>

                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="alert alert-info">
            {{ 'box.unvailable' | trans }}
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success" href="{{ path('box_new') }}">{{ 'box.create' | trans }}</a>
        </div>
    </div>
{% endblock %}
